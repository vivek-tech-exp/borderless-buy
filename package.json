{
  "name": "borderless-buy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "integration:test": "node scripts/integration.mjs",
    "test": "node tests/simple-test.js",
    "test:verbose": "node tests/simple-test.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "prepare": "husky",
    "security:gitleaks:staged": "sh scripts/security/check-gitleaks.sh staged",
    "security:gitleaks:push": "sh scripts/security/check-gitleaks.sh push",
    "security:gitleaks:repo": "sh scripts/security/check-gitleaks.sh repo",
    "security:audit:commit": "sh scripts/security/check-vulnerabilities.sh commit",
    "security:audit:push": "sh scripts/security/check-vulnerabilities.sh push",
    "security:check": "npm run security:gitleaks:push && npm run security:audit:push",
    "security:update": "npm update && npm audit fix && npm audit --audit-level=high",
    "security:update:force": "npm update && npm audit fix --force && npm audit --audit-level=high"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.95.3",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.3.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "husky": "^9.1.7",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  }
}
